# MIRA项目环境变量配置

# ===== 基础配置 =====
# 项目名称
PROJECT_NAME=MIRA
# 环境 (development/staging/production)
ENVIRONMENT=development
# 调试模式
DEBUG=true

# ===== 网络配置 =====
# Rust核心服务
RUST_HOST=0.0.0.0
RUST_PORT=3000

# Python推理服务
PYTHON_HOST=0.0.0.0
PYTHON_PORT=8000

# 服务间通信
PYTHON_SERVICE_URL=http://localhost:8000
QDRANT_URL=http://localhost:6333

# ===== 数据库配置 =====
# Qdrant向量数据库
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=mira_memories

# PostgreSQL (可选)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_girlfriend
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=your_secure_password

# Redis (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== AI模型配置 =====
# 嵌入模型
EMBEDDING_MODEL=BAAI/bge-m3
# 对话模型
CHAT_MODEL=Qwen/Qwen3-14B-Instruct
# 情感分析模型
EMOTION_MODEL=uer/chinese-roberta-base-finetuned-dianping

# 模型缓存目录
MODEL_CACHE_DIR=./data/models
# 模型量化设置
USE_QUANTIZATION=true
QUANTIZATION_BITS=4

# ===== GPU配置 =====
# CUDA设备 (空字符串表示CPU模式)
CUDA_VISIBLE_DEVICES=0
# PyTorch设备
TORCH_DEVICE=cuda
# Flash Attention
USE_FLASH_ATTENTION=true

# ===== 日志配置 =====
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=./logs/mira.log
# Rust日志配置
RUST_LOG=info
RUST_BACKTRACE=1

# ===== 性能配置 =====
# Zig内存池大小 (字节)
ZIG_MEMORY_POOL_SIZE=1048576
# 记忆系统配置
MEMORY_SHORT_TERM_LIMIT=50
MEMORY_LONG_TERM_THRESHOLD=0.8
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_CLEANUP_INTERVAL=1800

# ===== 安全配置 =====
# API密钥 (生产环境必须设置)
API_KEY=your_secret_api_key
# JWT密钥
JWT_SECRET=your_jwt_secret_key
# 允许的来源
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===== 监控配置 =====
# Prometheus指标
ENABLE_METRICS=true
METRICS_PORT=9090
# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# ===== Docker配置 =====
# Docker镜像标签
DOCKER_TAG=latest
# Docker注册表
DOCKER_REGISTRY=your-registry.com

# ===== 开发配置 =====
# 自动重载
AUTO_RELOAD=true
# 性能基准测试
ENABLE_BENCHMARKS=false
# 模拟模式 (跳过真实模型加载)
MOCK_MODE=false

# ===== 第三方服务 =====
# HuggingFace Hub
HUGGINGFACE_HUB_CACHE=./data/models
HF_TOKEN=your_huggingface_token

# OpenAI (备用)
OPENAI_API_KEY=your_openai_key
OPENAI_BASE_URL=https://api.openai.com/v1
